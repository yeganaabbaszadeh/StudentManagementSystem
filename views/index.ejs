<html lang="en">
<%- include('./partials/head.ejs') %>

	<body>
		<%- include('./partials/navbar.ejs') %>

			<div class="container pt-5 pb-5">
				<div class="row">
					<div class="col-6">
						<h3>Students</h3>
					</div>
					<div class="col-6 d-flex justify-content-end">
						<a href="/add" type="button" class="btn btn-primary align-self-center">+ Add new student</a>
					</div>
				</div>
				<br>
				<table class="table table-warning table-hover table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">First name</th>
							<th scope="col">Last name</th>
							<th scope="col">Department</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% if (rows.length> 0) { %>
							<% rows.forEach(row=> { %>
								<tr>
									<th scope="row">
										<%=row.id %>
									</th>
									<td>
										<%=row.firstname %>
									</td>
									<td>
										<%=row.lastname %>
									</td>
									<td>
										<%=row.department %>
									</td>
									<td class="text-end">
										<a href="/view/<%=row.id %> " type="button" class="btn btn-outline-success btn-small"><i
												class="bi bi-info-circle"></i></a>
										<a href="/edit/<%=row.id  %> " type="button"
											class="btn btn-outline-warning btn-small"><i class="bi bi-pencil"></i></a>
										<a href="/delete/<%=row.id %> " type="button"
											class="btn btn-outline-danger btn-small"><i class="bi bi-person-x"></i></a>
									</td>
								</tr>
								<% }); %>
									<% } else {%>
										<div class="alert alert-danger" role="alert">
											<p>No student info to display!</p>
										</div>
										<% } %>
					</tbody>
				</table>
			</div>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
				crossorigin="anonymous"></script>
	</body>

</html>