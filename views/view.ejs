<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/navbar.ejs') %>
            <div class="container pt-5 pb-5">
                <div class="col-6">
                    <h3>Student info</h3>
                </div>
                <div class="view-user p-5">
                    <% rows.forEach(row=> { %>
                        <div class="col-5">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="table-warning">First Name</th>
                                    <td>
                                        <%=row.firstname %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Last Name</th>
                                    <td>
                                        <%=row.lastname %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Date of birth</th>
                                    <td>
                                        <%=row.dateOfBirth %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Email</th>
                                    <td>
                                        <%=row.email %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Phone number</th>
                                    <td>
                                        <%=row.phoneNumber %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Department</th>
                                    <td>
                                        <%=row.department %>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="table-warning">Status</th>
                                    <td>
                                        <%=row.status %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                </div>
            </div>
            <% }) %>
                </div>
                </div>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                    crossorigin="anonymous"></script>
    </body>

</html>